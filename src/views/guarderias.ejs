<%- include('partials/header') %>
    <%- include('partials/navbar') %>
        <!-- Button trigger modal -->
        <div class="container mt-5">
            <div class="card">
                <div class="card-body mt-5">
                    <% if (data.length == 0) {%>
                        <h1 class="text-center">Cargá tu Guarderia</h1>
                        <% }else { %>
                            <div class="container">
                                <div class="row">
                                    <% if (data) { %>
                                        <% for (i=0;i<data.length;i++){ %>
                                            <div class="col-4 mb-2 card petprofile" style="box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);max-width: 400px;margin-right: 7px;">
                                                <div class="row">
                                                    <div class="col-5" style="padding: 5px 5px 5px 5px;">
                                                        <div class="crop rounded border" style="background-color: white;">
                                                            <% if(!data[i].RutaFoto){data[i].RutaFoto='phdog.jpg'} %>

                                                                <a data-toggle="modal" href="<%='#careno'+data[i].idGuarderia %>"><img src="<%='../uploads/'+data[i].RutaFoto%>" alt="guarderia" class="img"></a>
                                                        </div>
                                                    </div>
                                                    <div class="col-7 mt-1">
                                                        <h5>
                                                            <a data-toggle="modal" class="stretched-link " href="<%='#careno'+data[i].idGuarderia %>" style="color:#343a40;text-decoration: none;">
                                                                <%= data[i].NombreGuarderia %>
                                                            </a>
                                                        </h5>
                                                        <p style="font-family: Verdana;">
                                                            <%= data[i].LocalidadGuarderia+', '+data[i].ProvinciaGuarderia %>
                                                                <br>
                                                                <b>Lugares Disponibles: </b>
                                                                <%= data[i].LugaresDisponibles+' de '+data[i].LugaresGuarderia %>
                                                                    <br>
                                                                    <b>Puntaje: </b>
                                                                    <%=data[i].CalificacionGuarderia+'/10'%>
                                                                        <br>
                                                                        <b>Estado: </b>
                                                                        <%if (data[i].LugaresDisponibles == 0){%>
                                                                            Sin lugares disponibles
                                                                            <%}else{%>
                                                                                <%=data[i].EstadoGuarderia%>
                                                                                    <%}%>

                                                        </p>
                                                    </div>
                                                </div>
                                            </div>

                                            <% } %>
                                                <% } %>
                                                    <% } %>

                                                        <div class="col-4 mb-2 card text-white bg-primary petadd" style="box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);max-width: 400px;margin-right: 7px;">
                                                            <div class="row">
                                                                <div class="col-5" style="padding: 5px 5px 5px 5px;">
                                                                    <div class="crop rounded border" style="background-color: white;">
                                                                        <img src="../uploads/phdog.jpg" alt="mascota" class="img">
                                                                    </div>
                                                                </div>
                                                                <div class="col-7">
                                                                    <h5><br><br>
                                                                        <a class="stretched-link" data-toggle="modal" href="#AltaGuarderia"></a> Agregar Guarderia

                                                                    </h5>

                                                                </div>
                                                            </div>
                                                        </div>

                                </div>
                                <!-- FORMULARIO DE AGREGADO DE GUARDERIA -->


                                <!-- Modal -->
                                <div class="modal fade bd-example-modal-lg" id="AltaGuarderia" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-lg" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">Datos de tu Guarderia</h5>
                                                <button type="button" class="btn btn-light" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">X</span>
                                        </button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="container-fluid">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <form action="/guarderias/<%= session.userId %>/careadd" method="post" enctype="multipart/form-data">
                                                                <label for="NombreGuarderia">Nombre(*)</label>
                                                                <input type="text" name="NombreGuarderia" class="form-control">
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label for="MascEspecieGuarderia">Especie(*)</label>
                                                                <select type="text" name="MascEspecieGuarderia" class="form-control">
                                                                <option value="Perros">Perro</option>    
                                                                <option value="Gatos">Gato</option>    
                                                                <option value="Ambos">Ambos</option>    
                                                            </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label for="TipoGuarderia">Tipo de Guarderia(*)</label>
                                                                <select type="text" name="TipoGuarderia" class="form-control">
                                                                <option value="Solo de día">Solo de día</option>    
                                                                <option value="Alojamiento">Alojamiento</option>    
                                                                
                                                            </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="form-group">
                                                                <label for="MascTalleGuarderia">Permite Animales(*)</label>
                                                                <select type="text" name="MascTalleGuarderia" class="form-control">
                                                                <option value="Pequeños">Pequeños</option>    
                                                                <option value="Medianos">Medianos</option>    
                                                                <option value="Grandes">Grandes</option>  
                                                            </select>
                                                            </div>
                                                            <!--  -->
                                                        </div>
                                                        <div class="col-md-4">
                                                            <label for="LugaresGuarderia">Cantidad de Lugares</label>
                                                            <input type="text" name="LugaresGuarderia" class="form-control">
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <label for="DescripcionGuarderia">Descripcion de Guarderia</label>
                                                            <textarea name="DescripcionGuarderia" rows="3" class="form-control"></textarea>

                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <h5>Datos del Domicilio</h5>

                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <label for="DomCalleGuarderia">Calle(*)</label>
                                                            <input type="text" name="DomCalleGuarderia" class="form-control">
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label for="DomNumeroGuarderia">Número(*)</label>
                                                            <input type="text" name="" DomNumeroGuarderia " class="form-control ">
                                                        </div>
                                                        <div class="col-md-6 ">
                                                            <label for="DomPisoDptoGuarderia ">Piso & Dpto</label>
                                                            <input type="text " name=" "DomPisoDptoGuarderia" class="form-control">
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <label for="LocalidadGuarderia">Localidad(*)</label>
                                                            <input type="text" name="LocalidadGuarderia" class="form-control">
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label for="ProvinciaGuarderia">Provincia(*)</label>
                                                            <input type="text" name="ProvinciaGuarderia" class="form-control">
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label for="CPGuarderia">Código Postal(*)</label>
                                                            <input type="text" name="CPGuarderia" class="form-control">
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label for="TelGuarderia">Telefono(*)</label>
                                                            <input type="text" name="TelGuarderia" class="form-control">
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="form-group mt-3 mb-3">
                                                            <label for="foto">Foto de Perfil de la Guarderia(*)</label>
                                                            <input type="file" class="form-control-file" name="foto">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                                <button type="submit" class="btn btn-primary">Guardar Mascota</button>
                                            </div>
                                            </form>

                                        </div>
                                    </div>
                                </div>
                                <!-- TERMINA FORMULARIO DE AGREGADO Y COMIENZA FORMULARIO DE MODIFICACION O BORRADO -->


                                <% for (i=0;i<data.length;i++){ %>
                                    <div class="modal fade bd-example-modal-lg" id="<%='petno'+data[i].idMascota%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-lg" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLongTitle">
                                                        <%='Datos de '+data[i].NombreMascota%>
                                                    </h5>
                                                    <button type="button" class="btn btn-light" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">X</span>
                                        </button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="container-fluid">
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <form action="<%= '/mascotas/petupdate/'+data[i].idMascota %>" method="post" enctype="multipart/form-data">
                                                                    <label for="NombreMascota">Nombre</label>
                                                                    <input type="text" name="NombreMascota" value="<%=data[i].NombreMascota  %>" class="form-control">
                                                            </div>
                                                            <div class="col-md-6">
                                                                <div class="form-group">
                                                                    <label for="EspecieMascota">Especie</label>
                                                                    <p>
                                                                        <%=data[i].EspecieMascota%>
                                                                    </p>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-4">
                                                                <label for="RazaMascota">Raza(*)</label>
                                                                <p>
                                                                    <%=data[i].RazaMascota%>
                                                                </p>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <label for="AnioNacimientoMascota">Año de Nacimiento</label>
                                                                <p>
                                                                    <%=data[i].AnioNacimientoMascota  %>
                                                                </p>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <label for="AlimentoMascota">Alimento</label>
                                                                <input type="text" name="AlimentoMascota" class="form-control" value="<%=data[i].AlimentoMascota  %>">
                                                            </div>
                                                        </div>

                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <label for="EnfermedadesMascota">Enfermedades</label>
                                                                <textarea name="EnfermedadesMascota" rows="3" class="form-control"><%=data[i].EnfermedadesMascota  %></textarea>

                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <h5>Datos de tu Veterinario</h5>

                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <label for="VetNombreMascota">Nombre de tu Veterinario</label>
                                                                <input type="text" name="VetNombreMascota" class="form-control" value="<%=data[i].VetNombreMascota  %>">
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label for="VetTelMascota">Telefono de tu Veterinario</label>
                                                                <input type="text" name="VetTelMascota" class="form-control" value="<%=data[i].VetTelMascota  %>">
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="form-group mt-3 mb-3">
                                                                <img src="<%='../uploads/'+data[i].RutaFoto%>" alt="../uploads/phdog.jpg">
                                                                <!-- <label for="foto">Foto de Perfil de tu mascota</label>
                                                                <input type="file" class="form-control-file" name="foto"> -->
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="submit" class="btn btn-danger" formaction="<%= '/mascotas/petdelete/'+data[i].idMascota %>">Borrar</button>
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                                                    <!-- <button type="button" class="btn btn-Danger">Eliminar</button> -->
                                                </div>
                                                </form>

                                            </div>
                                        </div>
                                    </div>
                                    <%}%>
                            </div>
                </div>

            </div>
            <%- include ("partials/_footer") %>