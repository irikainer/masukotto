<%- include('partials/header') %>
    <%- include('partials/navbar') %>
        <!-- Button trigger modal -->
        <div class="container mt-5">
            <div class="card">
                <div class="card-body mt-5">
                    <% if (datario.length==0) {%>
                        <h1 class="text-center">No tenemos guarderias disponibles en este momento</h1>
                        <% }else { %>
                            <div class="container">
                                <div class="row">
                                    <% if (datario) { %>
                                        <% for (i=0;i<datario.length;i++){ %>
                                            <div class="col-4 mb-2 card petprofile"
                                                style="box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);max-width: 400px;margin-right: 7px;">
                                                <div class="row">
                                                    <div class="col-5" style="padding: 5px 5px 5px 5px;">
                                                        <div class="crop rounded border"
                                                            style="background-color: white;">
                                                            <% if(!datario[i].RutaFoto){datario[i].RutaFoto='phdog.jpg'
                                                                } %>

                                                                <a data-toggle="modal"
                                                                    href="<%='#consulta'+datario[i].idGuarderia %>"><img
                                                                        src="<%='../uploads/'+datario[i].RutaFoto%>"
                                                                        alt="guarderia" class="img"></a>
                                                        </div>
                                                    </div>
                                                    <div class="col-7 mt-1">
                                                        <h5>
                                                            <a data-toggle="modal" class="stretched-link "
                                                                href="<%='#consulta'+datario[i].idGuarderia %>"
                                                                style="color:#343a40;text-decoration: none;">
                                                                <%= datario[i].NombreGuarderia %>
                                                            </a>
                                                        </h5>
                                                        <p style="font-family: Verdana;">
                                                            <%= datario[i].LocalidadGuarderia+', '+datario[i].ProvinciaGuarderia %>
                                                                <br>
                                                                <b>
                                                                <%= datario[i].LugaresDisponibles%></b> lugares disponibles.
                                                                <br>
                                                                <%if(!datario[i].CalificacionGuarderia){%>
                                                                    <%=' Sin Calificaciones'%>
                                                                <%}else{%>
                                                                    <b>Puntaje: </b>
                                                                    <%=datario[i].CalificacionGuarderia+' /10'%>
                                                                        <%}%>
                                                                            <br>
                                                                            <b>Estado: </b>
                                                                            <%if (datario[i].LugaresDisponibles==0){%>
                                                                                Sin lugares disponibles
                                                                                <%}else{%>
                                                                                    <%=datario[i].EstadoGuarderia%>
                                                                                        <%}%>
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>

                                            <% } %>
                                                <% } %>
                                                    <% } %>
                                </div>
                            </div>


                </div>

            </div>
        </div>
        <% for (i=0;i<datario.length;i++){ %>
            <div class="modal fade bd-example-modal-lg" id="<%='consulta'+datario[i].idGuarderia%>" tabindex="-1"
                role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">
                                Datos de Guarderia
                            </h5>
                            <button type="button" class="btn btn-light" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">X</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="container-fluid">
                                <form action="<%= '/guarderiasall/reserva/'+ session.userId %>" method="post"
                                    enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <h5 class="display-5">
                                                <%=datario[i].NombreGuarderia %>
                                            </h5>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <img src="<%='../uploads/'+datario[i].RutaFoto%>"
                                                class="rounded float-left img-thumbnail" alt="../uploads/phdog.jpg">
                                        </div>
                                        <div class="col-sm-6">

                                            <p class="lead">
                                                <% if(datario[i].MascEspecieGuarderia=='Ambos' ){%>
                                                    Somos una guarderia para gatos y perros
                                                    <%}else{%>
                                                        <%='Somos una guarderia para '+datario[i].MascEspecieGuarderia.toLowerCase()%>
                                                            <%} %>
                                            </p>

                                            <p class="lead">
                                                <% if(datario[i].TipoGuarderia == ' Solo de día'){%>
                                                            Alojamiento diurno
                                                            <%}else{%>
                                                                Alojamiento completo
                                                                <%} %>
                                            </p>
                                            <p class="lead">
                                                <% if(datario[i].MascTalleGuarderia=='Pequeños' ){%>
                                                    Admitimos mascotas pequeñas
                                                    <%}else if(datario[i].MascTalleGuarderia=='Medianos' ){%>
                                                        Admitimos mascotas medianas
                                                        <%}else {%>
                                                            Admitimos mascotas grandes
                                                            <%} %>
                                            </p>
                                            <p class="lead">
                                                <%='Lugares disponibles: '+datario[i].LugaresDisponibles+' de '+datario[i].LugaresGuarderia %>
                                            </p>

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label for="DescripcionGuarderia">Acerca de esta Guarderia</label>
                                            <input type="textarea" class="form-control" name="DescripcionGuarderia" value="<%=datario[i].DescripcionGuarderia  %>" readonly>

                                        </div>
                                    </div>
                                    <%if(session.loggedin){%>
                                        <div class="row">
                                            <h5 class="display-6">Domicilio de la guarderia</h5>

                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label for="DomCalleGuarderia">Calle</label>
                                                <input type="text" name="DomCalleGuarderia" class="form-control" value="<%=datario[i].DomCalleGuarderia  %>" readonly>
                                            </div>
                                            <div class="col-md-3">
                                                <label for="DomNumeroGuarderia">Número</label>
                                                <input type="text" name="DomNumeroGuarderia" class="form-control" value="<%=datario[i].DomNumeroGuarderia  %>" readonly>
                                            </div>
                                            <div class="col-md-3">
                                                <label for="DomPisoDptoGuarderia">Piso/Dpto</label>
                                                <input type="text" name="DomPisoDptoGuarderia" class="form-control" value="<%=datario[i].DomPisoDptoGuarderia  %>" readonly>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label for="LocalidadGuarderia">Localidad</label>
                                                <input type="text" name="LocalidadGuarderia" class="form-control" value="<%=datario[i].LocalidadGuarderia  %>" readonly>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="ProvinciaGuarderia">Provincia</label>
                                                <input type="text" name="ProvinciaGuarderia" class="form-control" value="<%=datario[i].ProvinciaGuarderia  %>" readonly>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="CPGuarderia">Codigo Postal</label>
                                                <input type="text" name="CPGuarderia" class="form-control" value="<%=datario[i].CPGuarderia  %>" readonly>
                                            </div>
                                            <div class="col-md-6">
                                                <label for="TelGuarderia">Telefono</label>
                                                <input type="text" name="TelGuarderia" class="form-control" value="<%=datario[i].TelGuarderia  %>" readonly>
                                            </div>

                                        </div>
                                        <div class="row">
                                            <h5 class="display-6">Cargar Reserva</h5>

                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <label for="FechaDesdeReserva">Reservar desde</label>
                                                <input type="date" class="form-control" name="FechaDesdeReserva">
                                            </div>
                                            <div class="col-md-4">
                                                <label for="FechaHastaReserva">Hasta</label>
                                                <input type="date" class="form-control" name="FechaHastaReserva">
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="NombreMascota">Mascota</label>
                                                    <select type="text" name="NombreMascota" class="form-control">
                                                        <option value=""></option>
                                                    <% for (i=0;i<mascdata.length;i++){ %>
                                                        <option value="<%=mascdata[i].NombreMascota%>"><%=mascdata[i].NombreMascota%></option>
                                                        <input type="hidden" value="<%=mascdata[i].idMascota%>"/>    
                                                    <% } %>  
                                                </select>

                                                </div>
                                            </div>
                                        </div>

                                        <% } %>
                                            <br>
                                            <div class="modal-footer">

                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                                <%if(session.loggedin){%>
                                                    <button type="submit" class="btn btn-primary">Reservar</button>
                                                    <% } %>
                                                        <!-- <button type="button" class="btn btn-Danger">Eliminar</button> -->
                                            </div>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
            <%}%>

                <%- include ("partials/_footer") %>